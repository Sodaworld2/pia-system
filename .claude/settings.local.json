{
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(node --version:*)",
      "Bash(npm install:*)",
      "Bash(npm run build:*)",
      "Bash(npm start)",
      "Bash(timeout:*)",
      "Bash(curl:*)",
      "Bash(if exist \"%USERPROFILE%\\\\.claude\\\\settings.json\" type \"%USERPROFILE%\\\\.claude\\\\settings.json\")",
      "Bash(git fetch:*)",
      "Bash(git stash:*)",
      "Bash(git pull:*)",
      "Bash(start:*)",
      "Bash(npx kill-port:*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/session-start.cjs",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/post-tool-use.cjs",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/stop.cjs",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
