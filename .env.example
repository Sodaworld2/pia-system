# PIA Configuration

# Mode: 'hub' (central server) or 'local' (machine agent)
PIA_MODE=hub

# Server
PIA_PORT=3000
PIA_HOST=0.0.0.0
PIA_WS_PORT=3001

# Security
PIA_SECRET_TOKEN=change-this-to-a-secure-random-string
PIA_JWT_SECRET=change-this-to-another-secure-string

# Hub connection (only for PIA_MODE=local)
PIA_HUB_URL=http://localhost:3000
PIA_MACHINE_NAME=Main PC

# AI Configuration
PIA_AI_PRIMARY=ollama
PIA_AI_FALLBACK=claude
PIA_OLLAMA_URL=http://localhost:11434
PIA_OLLAMA_MODEL=llama3:70b
PIA_CLAUDE_API_KEY=sk-ant-your-key-here

# Database
PIA_DB_PATH=./data/pia.db

# Features
PIA_ENABLE_AUTO_HEALER=true
PIA_ENABLE_PUSH_NOTIFICATIONS=true
PIA_HEARTBEAT_INTERVAL=30000
PIA_STUCK_THRESHOLD=300000

# Logging
PIA_LOG_LEVEL=info
